<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentBeranda">

    <LinearLayout
        android:id="@+id/satu"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F35D2E">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/daftar_kontak"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="DAFTAR KONTAK"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/daftar_kontak"
            android:layout_marginTop="5dp"
            android:background="#CA6F43">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dua"
        android:layout_below="@+id/satu"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="#EEE6E6"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.SearchView>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/dua"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/content_main" />

    </LinearLayout>

</RelativeLayout>